        <Label Content="Player: " HorizontalAlignment="Left" Margin="689,55,0,0" VerticalAlignment="Top" Width="59" Height="26" Grid.ColumnSpan="3"/>
        <Label Content="Computer:" HorizontalAlignment="Left" Margin="671,24,0,0" VerticalAlignment="Top" Width="77" Height="26" RenderTransformOrigin="0.492,1.192" Grid.ColumnSpan="3"/>
        <Button Name="DealButton" Content="Deal!" HorizontalAlignment="Left" Margin="42,284,0,0" VerticalAlignment="Top" Width="94" Height="27" Click="DealButton_OnClick" Grid.Column="2"/>
        <Label Name="MoneyComputerLabel" Content="" HorizontalAlignment="Left" Margin="21,24,0,0" VerticalAlignment="Top" Width="59" Grid.Column="2"/>
        <Label Name="MoneyPlayerLabel" Content="" HorizontalAlignment="Left" Margin="21,55,0,0" VerticalAlignment="Top" Width="59" Grid.Column="2"/>
        <TextBox Name="Card1PL" FontSize="46" TextAlignment="Center" HorizontalAlignment="Left" Height="114" Margin="260,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Focusable="False"/>
        <TextBox Name="Card2PL" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="370,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Focusable="False"/>
        <TextBox Name="Card1AI" FontSize="46" TextAlignment="Center" HorizontalAlignment="Left" Height="114" Margin="260,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Focusable="False"/>
        <TextBox Name="Card2AI" FontSize="46" TextAlignment="Center" HorizontalAlignment="Left" Height="114" Margin="370,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Focusable="False"/>
        <TextBox Name="Card3AI" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="479,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <TextBox Name="Card4AI" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="158,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <TextBox Name="Card3PL" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="158,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <TextBox Name="Card4PL" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="479,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <TextBox Name="Card5PL" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="59,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <TextBox Name="Card6PL" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="582,249,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <Label  Name="BlackJackLabel" FontSize="42" Visibility="Hidden" Content="Blackjack!" HorizontalAlignment="Left" Margin="158,381,0,0" VerticalAlignment="Top" Height="68" Width="391"/>
        <Label Name="EndGameMessageLabel" Content="" HorizontalAlignment="Left" FontSize="26" Margin="59,398,0,0" VerticalAlignment="Top" Height="48" Width="593" Visibility="Visible" />
        <Button Content="Rules" Grid.Column="2" HorizontalAlignment="Left" Margin="98,10,0,0" VerticalAlignment="Top" Width="75" Click="RulesButton_OnClick"/>
        <TextBox Name="Card5AI" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="59,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <TextBox Name="Card6AI" FontSize="46" TextAlignment="Center"  HorizontalAlignment="Left" Height="114" Margin="582,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Visibility="Visible" Focusable="False"/>
        <Label Content="Total points:" Grid.Column="2" HorizontalAlignment="Left" Margin="21,103,0,0" VerticalAlignment="Top" Width="104"/>
        <Label Content="Computer: " Grid.Column="2" HorizontalAlignment="Left" Margin="21,134,0,0" VerticalAlignment="Top" Width="69"/>
        <Label Content="Player:" Grid.Column="2" HorizontalAlignment="Left" Margin="21,160,0,0" VerticalAlignment="Top" Width="69"/>
        <Label Content="0" Name="AIScoreLabel" Grid.Column="2" HorizontalAlignment="Left" Margin="98,134,0,0" VerticalAlignment="Top"/>
        <Label Content="0" Name="PlayerScoreLabel" Grid.Column="2" HorizontalAlignment="Left" Margin="98,165,0,0" VerticalAlignment="Top"/>
        <TextBox Name="BetBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="42,249,0,0" TextWrapping="Wrap" Text="Enter bet!" VerticalAlignment="Top" Width="83" />
    </Grid>
</Window>