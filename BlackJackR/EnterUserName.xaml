<Window x:Class="BlackJackR.EnterUserName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EnterUserName" Height="171" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,4">
        <Label Content="Enter your name to play:" HorizontalAlignment="Left" Margin="80,26,0,0" VerticalAlignment="Top" Width="142"/>
        <TextBox Name="PlayerNameInput" HorizontalAlignment="Left" Height="23" Margin="85,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="137"/>
        <Button Content="Play!" HorizontalAlignment="Left" Margin="113,105,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" IsDefault="True" />

    </Grid>
</Window>
